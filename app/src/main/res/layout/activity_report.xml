<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReportActivity">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4186022078056115/1841333421" >
    </com.google.android.gms.ads.AdView>

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/reporttablayout"
        android:layout_below="@id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Tab"
        app:tabMode="fixed"/>
    <androidx.viewpager2.widget.ViewPager2
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/reporttablayout"
        android:id="@+id/reportpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>